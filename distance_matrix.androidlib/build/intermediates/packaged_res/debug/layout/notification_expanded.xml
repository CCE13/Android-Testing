<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/Distance_ran"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="55.55"
                android:textAlignment="viewStart"
                android:textAppearance="@style/DisplayedData"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distance_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textAppearance="@style/PrefixData" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/TimeTaken"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="55:55:55"
                android:textAppearance="@style/DisplayedData" />

            <TextView
                android:id="@+id/time_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textAppearance="@style/PrefixData" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/Pace"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="55'55"
                android:textAppearance="@style/DisplayedData" />

            <TextView
                android:id="@+id/pace_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min/km"
                android:textAppearance="@style/PrefixData" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:backgroundTint="#009327"
        android:fontFamily="@font/poppins_bold"
        android:scaleX="1"
        android:text="Pause"
        android:textAlignment="gravity"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Resume"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#9A9A9A"
        android:fontFamily="@font/poppins_bold"
        android:scaleX="1"
        android:text="Resume"
        android:textAlignment="gravity"
        tools:visibility="gone" /><![CDATA[











    />







]]>
</LinearLayout>